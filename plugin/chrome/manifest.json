{
  "manifest_version": 2,

  "name": "Brain",
  "description": "Connect to the machines, gods and people of the World Wide Web",
  "version": "0.1",

  "browser_action": {
    "default_popup": "popup.html"
  },

  "background": {
    "scripts": ["background.js"]
  },

  "permissions": [
    "tabs",
    "background"
  ]
}
